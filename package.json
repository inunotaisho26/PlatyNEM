{
  "name": "blogstarter",
  "version": "1.0.0",
  "description": "Starting point for blog and user management websites.",
  "private": true,
  "main": "server/index.js",
  "author": "Darion Welch",
  "license": "ISC",
  "engines": {
    "node": "0.12.3",
    "npm": "2.5.1"
  },
  "dependencies": {
    "bcrypt-nodejs": "latest",
    "body-parser": "latest",
    "browserify": "latest",
    "compression": "latest",
    "concurrently": "latest",
    "cors": "latest",
    "crypto": "latest",
    "ejs": "latest",
    "es6-promise": "latest",
    "express": "latest",
    "express-session": "latest",
    "font-awesome": "latest",
    "fs-extra": "latest",
    "less": "latest",
    "less-plugin-clean-css": "latest",
    "lodash": "latest",
    "lusca": "latest",
    "memory-cache": "latest",
    "minifyify": "latest",
    "mkdirp": "latest",
    "moment": "latest",
    "morgan": "latest",
    "multer": "latest",
    "mysql": "latest",
    "nodemailer": "latest",
    "nodemailer-sendgrid-transport": "latest",
    "passport": "latest",
    "passport-facebook": "latest",
    "passport-local": "latest",
    "platypus": "latest",
    "platypusui": "latest",
    "quill": "latest",
    "serve-favicon": "latest",
    "serve-static": "latest",
    "stringify": "latest",
    "tedious": "latest",
    "tedious-connection-pool": "latest",
    "tsconfig-glob": "latest",
    "tsconfig-lint": "latest",
    "tsd": "latest",
    "typescript": "latest",
    "vary": "latest"
  },
  "devDependencies": {
    "nodemon": "latest",
    "rimraf": "latest",
    "tsconfig-lint": "latest",
    "watchify": "latest"
  },
  "scripts": {
    "build": "concurrent -r \"npm run less\" \"npm run build:ts\"",
    "build:ts": "npm run ts && npm run bundle",
    "bundle": "browserify app/src/main.js -d -t [stringify --extensions .html --extensions .less --extensions .css --extensions .code] -o app/dist/app.js -v -p [minifyify --no-map]",
    "clean": "concurrent -r \"npm run clean:dist\" \"npm run clean:public\" \"npm run clean:server\"",
    "clean:dist": "rimraf app/dist/*",
    "clean:public": "rimraf app/src/**/*.js app/src/**/*.js.map",
    "clean:server": "rimraf server/**/*.js server/**/*js.map",
    "less": "lessc -ru app/styles/main.less > app/dist/app.css --clean-css=\"--s0 --advanced\"",
    "lint": "tsconfig-lint -u",
    "postbundle": "echo bundle Done!",
    "postless": "echo less Done!",
    "prepublish": "npm run tsd && mkdirp app/dist",
    "server": "nodemon -w server -e js,json,ejs --delay 4 --debug",
    "start": "npm run ts && concurrent -r -k \"npm run watch\" \"npm run server\"",
    "ts": "tsconfig && tsc -p .",
    "tsconfig": "tsconfig",
    "tsd": "tsd update -so && tsd link",
    "watch": "concurrent -r -k \"npm run watch:ts\" \"npm run watch:less\" \"npm run watch:bundle\"",
    "watch:bundle": "watchify app/src/main.js -d -t [stringify --extensions .html --extensions .less --extensions .css --extensions .code] -o app/dist/app.js -v",
    "watch:less": "nodemon -q -w app -e less -x npm run less",
    "watch:ts": "npm run ts -- -w"
  }
}
