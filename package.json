{
  "name": "blogstarter",
  "version": "1.0.0",
  "description": "Starting point for blog and user management websites.",
  "main": "index.js",
  "author": "Darion Welch",
  "license": "ISC",
  "scripts": {
    "build": "concurrent -r \"npm run less\" \"npm run build:ts\"",
    "build:ts": "npm run ts && npm run bundle",
    "build:ts:deploy": "npm run build:ts && npm run bundle:deploy",
    "bundle": "browserify client/app/main.js -d -t [stringify --extensions .html --extensions .less --extensions .css --extensions .code] -o client/dist/main.js",
    "bundle:deploy": "browserify client/app/main.js -d -t [stringify --extensions .html --extensions .less --extensions .css --extensions .code] -o client/dist/main.js",
    "deploy": "npm run tsd && concurrent -r \"npm run less\" \"npm run build:ts:deploy\"",
    "dev": "concurrent -r \"npm run watch\" \"npm start\"",
    "less": "lessc -ru client/styles/main.less > client/dist/main.css --clean-css=\"--s0 --advanced\"",
    "start": "nodemon -w server -e js,json --delay 4 server/index.js",
    "ts": "npm run tsconfig && tsc -p .",
    "tsconfig": "tsconfig",
    "tsd": "tsd update -so --config tsd.json && tsd link",
    "watch": "concurrent -r \"npm run watch:ts:client\" \"npm run watch:ts:server\" \"npm run watch:less\" \"npm run watch:html\"",
    "watch:less": "nodemon -w client -e less -x npm run less",
    "watch:html": "nodemon -w client -e html -x npm run bundle",
    "watch:ts:client": "nodemon -w client -e ts -x npm run build:ts",
    "watch:ts:server": "nodemon -w server -e ts -x npm run ts"
  },
  "engines": {
    "node": "0.11.6",
    "npm": "2.3.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.12.2",
    "browserify": "^10.2.4",
    "concurrently": "^0.1.1",
    "crypto": "0.0.3",
    "ejs": "^2.3.1",
    "es6-promise": "^2.0.1",
    "express": "^4.12.3",
    "express-session": "^1.10.4",
    "font-awesome": "^4.3.0",
    "less": "^2.5.1",
    "memory-cache": "^0.1.2",
    "moment": "^2.10.3",
    "multer": "^0.1.8",
    "mysql": "^2.5.5",
    "nodemailer": "^1.3.4",
    "nodemailer-sendgrid-transport": "^0.1.0",
    "passport": "^0.2.1",
    "passport-local": "^1.0.0",
    "platypus": "^0.13.6",
    "platypusui": "^0.4.6",
    "quill": "^0.19.12",
    "stringify": "^3.1.0",
    "tsconfig-glob": "^0.1.3",
    "tsconfig-lint": "^0.1.4",
    "tsd": "^0.6.3",
    "typescript": "1.5.0-alpha"
  },
  "devDependencies": {
    "nodemon": "^1.3.7"
  }
}
